{
  "expo": {
    "name": "Phillboards",
    "slug": "phillboards",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.phillboards.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to place AR phillboards in the real world.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to place and find phillboards near you."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.phillboards.app",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDmXngxHEMT_AfVai6Q-REX3wVJO_tDjbU"
        }
      }
    },
    "web": {},
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Phillboards to access your camera to place AR phillboards."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Phillboards to use your location to place and find phillboards near you."
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#1E88E5",
          "image": "./assets/images/splash.png",
          "resizeMode": "contain",
          "imageWidth": 200
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
